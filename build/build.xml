				<include name="poi-ooxml-schemas-4.1.2.jar"/>
				<include name="curvesapi-1.06.jar"/>
				<include name="sqlite-jdbc-3.30.1.jar"/>
				<include name="poi-4.1.2.jar"/>
				<include name="javafx.swing.jar"/>
				<include name="commons-codec-1.13.jar"/>
				<include name="javafx.graphics.jar"/>
				<include name="javafx.base.jar"/>
				<include name="commons-math3-3.6.1.jar"/>
				<include name="activation-1.1.1.jar"/>
				<include name="poi-scratchpad-4.1.2.jar"/>
				<include name="junit-4.12.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="11" target="11" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="GSTProjectOne.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		    <fx:fileset dir="dist" includes="resources/**"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="GSTInvoiceAPP"
			mainClass="windows.Main"
			version="2.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/GSTProjectOne.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Samarth Consultancy Services IT Devision"/>
				<attribute name="Implementation-Title" value="GSTInvoiceAPP"/>
				<attribute name="Implementation-Version" value="2.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="GSTProjectOne" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="GSTProjectOne" vendor="Samarth Consultancy Services IT Devision"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
</project>
